TELEGRAM_BOT_TOKEN=your_bot_token
# Empty means allow all chat ids (not recommended in production)
ALLOWED_CHAT_IDS=

# Legacy JSON path used for migration/manual compatibility
DATA_FILE=./data/sessions.json

# Primary runtime database (SQLite)
DB_FILE=./data/jclaw.db

# Codex CLI command and args template.
# {prompt}, {session_id}, {codex_session_id} placeholders are replaced at runtime.
CODEX_COMMAND=auto
CODEX_ARGS_TEMPLATE=exec --skip-git-repo-check "{prompt}"

# Workdir where codex runs (e.g. your repo root)
CODEX_WORKDIR=.

# Runtime safeguards
CODEX_TIMEOUT_MS=1800000
MAX_OUTPUT_CHARS=3500
CODEX_NODE_OPTIONS=--max-old-space-size=4096

# Cron worker poll interval (ms)
JCLAW_CRON_POLL_MS=10000

