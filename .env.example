TELEGRAM_BOT_TOKEN=your_bot_token
# Empty means allow all chat ids (not recommended in production)
ALLOWED_CHAT_IDS=
# Empty means fall back to ALLOWED_CHAT_IDS
ADMIN_CHAT_IDS=

# Interaction log file path
DATA_FILE=./data/interactions.json

# Primary runtime database (SQLite)
DB_FILE=./data/jclaw.db

# Codex CLI command and args template.
# {prompt}, {session_id}, {codex_session_id} placeholders are replaced at runtime.
CODEX_COMMAND=auto
CODEX_ARGS_TEMPLATE=exec --skip-git-repo-check "{prompt}"

# Workdir where codex runs (e.g. your repo root)
CODEX_WORKDIR=.

# Runtime safeguards
CODEX_TIMEOUT_MS=1800000
MAX_OUTPUT_CHARS=3500
CODEX_NODE_OPTIONS=--max-old-space-size=4096

# Cron worker poll interval (ms)
JCLAW_CRON_POLL_MS=10000


# Send cron execution result messages to Telegram chat_id
CRON_NOTIFY_TELEGRAM=false
CRON_NOTIFY_MAX_CHARS=1200
CRON_NOTIFY_VERBOSE=true

WEB_DEV_PASSWORD=0000

# Web server / cross-origin API
JCLAW_WEB_HOST=0.0.0.0
JCLAW_WEB_PORT=3100
WEB_ALLOWED_ORIGINS=https://your-frontend.pages.dev
WEB_AUTH_COOKIE_SAMESITE=None
WEB_AUTH_COOKIE_SECURE=true

# Max number of downloaded Telegram image files to keep
TELEGRAM_UPLOAD_MAX_FILES=200

# Web file upload retention (count and per-file bytes)
WEB_UPLOAD_MAX_FILES=50
WEB_UPLOAD_MAX_BYTES=15728640
